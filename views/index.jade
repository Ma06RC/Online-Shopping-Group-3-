extends layout


block content

    .fb-like(data-share='true', data-width='450', data-show-faces='true')
    h1= title

    p
        if loggedIn == undefined
            h3 You are not logged in
            br
            a(href="/users/signup") Click here to sign up.
            br
            a(href="/users/login") Click here to login.
            br
            a(href="/facebook/login") Click here to login with Facebook.
            br
            a(href="/profile/" + userID) Click here to view profile
            
        else
            h3 You are logged in in, welcome #{loggedIn}
            a(href="/users/logout") Click here to sign out.

    a(href="/listings") Browse Listings

    h2 Listings

    ul
    each user in users
        ul
            each listing in user.Listings
                li
                    = listing.title
                    | (
                    a(href="/listings/" + listing.id + "/view/") View
                    | )